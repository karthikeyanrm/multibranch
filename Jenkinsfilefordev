pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                script {
                    // Checkout the source code from the repository
                    checkout scm
                }
            }
        }
        
        stage('Conditional Actions') {
            when {
                expression {
                    // Check if the branch name is 'dev'
                    return env.BRANCH_NAME == 'dev'
                }
            }
            steps {
                // This step will only execute if the branch is 'dev'
                script {
                    // Start Docker Compose with your desired services
                    sh 'docker-compose up -d'
                }
            }
        }
        
        stage('Another Conditional Action') {
            when {
                expression {
                    // Check if the branch name is 'master'
                    return env.BRANCH_NAME == 'master'
                }
            }
            steps {
                // This step will only execute if the branch is 'master'
                script {
                    // List files in the current directory
                    sh 'ls -al'
                }
            }
        }
    }
}
