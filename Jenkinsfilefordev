pipeline {
    agent any

    stages {
        stage('Conditional Execution') {
            steps {
                script {
                    def currentBranch = env.GIT_BRANCH

                    if (currentBranch ==~ /refs\/heads\/dev/) {
                        sh 'ls -al'
                    } else if (currentBranch ==~ /refs\/heads\/master/) {
                        sh 'timedatectl'
                    } else {
                        echo "Branch not recognized: $currentBranch"
                    }
                }
            }
        }
    }
}
