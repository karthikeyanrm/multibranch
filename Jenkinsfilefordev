pipeline {
    agent any

    stages {
        stage('Conditional Execution') {
            steps {
                script {
                    def currentBranch = sh(script: 'git rev-parse --abbrev-ref HEAD', returnStdout: true).trim()

                    if (currentBranch == 'dev') {
                        sh 'ls -al'
                    } else if (currentBranch == 'master') {
                        sh 'timedatectl'
                    } else {
                        echo "Branch not recognized: $currentBranch"
                    }
                }
            }
        }
    }
}
